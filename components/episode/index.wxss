/* components/episode/index.wxss */

.episode-container {
  height: 60rpx;
  display: inline-flex;
  flex-direction: row;
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  margin-right: 14rpx;
}

.line {
  border-left: 1px solid black;
  margin-right: 14rpx;
  height: 44rpx;
}

.date-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.month {
  font-size: 24rpx;
  line-height: 24rpx;
}

.year {
  font-size: 20rpx;
  line-height: 20rpx;
}